<BehaviorTree ID="MainTree">
    <sequence name="grabCoin">
        <condition>CanGrabCoin</condition>
            <action>GrabCoin</action>
    </sequence>
    <sequence name="shootEnemy">
        <condition>CanShootEnemy</condition>
            <action>ShootEnemy</action>
    </sequence>
    <sequence name="simpleMoveForward">
        <condition>CanMoveForward</condition>
            <action>MoveForward</action>
    </sequence>
    <sequence name="MoveForwardJump">
        <condition>CanMoveForwardJump</condition>
            <action>MoveForwardJump</action>
    </sequence>
    <sequence name="simpleMoveBackward">
        <condition>CanMoveBackward</condition>
            <action>MoveBackward</action>
    </sequence>
    <sequence name="moveBackwardJump">
        <condition>CanMoveBackwardJump</condition>
            <action>MoveBackwardJump</action>
    </sequence>
</BehaviorTree>
